{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<style>
    .photo{
        background-image: url(../pictures/contact.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<section class="container-fluid">
    <div class="photo row" style="height: 200px;">
        <div class="col d-flex justify-content-center align-items-center">
            <p class="text-light" style="font-size: 26px;">Nous contacter</p>
        </div>
    </div>
    <div class="row bg-dark" style="height: 50px;">
        <div class="col d-flex align-items-center justify-content-end me-3">
          <a href="{{ path('app_main')}}">
            <button type="button" class="btn btn-danger rounded">Retour</button>
          </a>
        </div>
    </div>
    <div class="row bg-dark d-flex justify-content-center">
        <div class="col-9 m-5">
            <div class="card-body py-5 mx-md-5 bg-light rounded">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                    {{ form_start(contactForm)}}
                        <div class="mb-4 d-flex justify-content-center">
                            <h1>Formulaire de contact</h1>
                        </div>
                        <div class="row">
                            <div class="col-6 m-2 text-center">
                                {{ form_row(contactForm.lastname)}}
                            </div>
                            <div class="col-6 m-2 text-center">
                                {{ form_row(contactForm.firstname)}}
                            </div> 
                        </div>
                        <div class="row">
                            <div class="col-6 m-2 text-center">
                                {{ form_row(contactForm.email)}}
                            </div>  
                            <div class="col-6 m-2 text-center">
                                {{ form_row(contactForm.phoneNumber)}}
                            </div>
                        </div>
                        <div class="m-4 text-center">
                            {{ form_row(contactForm.message)}}
                        </div>  
                        <div class="m-4 text-center">
                            <button type="submit" class="btn btn-success mt-3">envoyer</button>  
                        </div>

                    {{ form_end(contactForm)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83998.77824585779!2d2.26463501985937!3d48.858938434541045!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1699905078862!5m2!1sfr!2sfr" width="100%" height="450px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>
{% endblock %}
